# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id

# VM API Configuration
LIA__SERVER__HOST=0.0.0.0
LIA__SERVER__PORT=3000
LIA__SERVER__WEB_URL=http://localhost:5173

# Database
LIA__DATABASE__URL=postgres://lia:lia@localhost:5432/lia
LIA__DATABASE__MAX_CONNECTIONS=10

# Firecracker
LIA__FIRECRACKER__BIN_PATH=/usr/local/bin/firecracker
LIA__FIRECRACKER__JAILER_BIN_PATH=/usr/local/bin/jailer
LIA__FIRECRACKER__KERNEL_PATH=/var/lib/lia/kernel/vmlinux
LIA__FIRECRACKER__ROOTFS_PATH=/var/lib/lia/rootfs/rootfs.ext4
LIA__FIRECRACKER__VOLUMES_DIR=/var/lib/lia/volumes
LIA__FIRECRACKER__SOCKETS_DIR=/var/lib/lia/sockets
LIA__FIRECRACKER__LOGS_DIR=/var/lib/lia/logs

# VM Defaults
LIA__VM__DEFAULT_VCPU_COUNT=2
LIA__VM__DEFAULT_MEMORY_MB=2048
LIA__VM__DEFAULT_STORAGE_GB=50
LIA__VM__IDLE_TIMEOUT_MINUTES=30

# Claude API
LIA__CLAUDE__API_KEY=your_anthropic_api_key

# Web UI (for Discord bot)
VM_API_URL=http://localhost:3000
WEB_URL=http://localhost:5173
